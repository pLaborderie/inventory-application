{% extends "layout.njk" %}
{% block header %}Category Form{% endblock %}
{% block content %}
  <form action="{% if not category %}/category{% endif %}" method="POST" class="space-y-8 divide-y divide-gray-200">
    <div class="space-y-8 divide-y divide-gray-200">
      <div>
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Category
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            {% if category %}
              Edit a tea category.
            {% else %}
              Create a new tea category.
            {% endif %}
          </p>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <label for="title" class="block text-sm font-medium text-gray-700">
              Title
            </label>
            <div class="mt-1 flex rounded-md shadow-sm">
              <input {% if category %}value="{{ category.title }}"{% endif %} type="text" name="title" id="title" class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full min-w-0 rounded-none rounded-r-md sm:text-sm border-gray-300">
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="description" class="block text-sm font-medium text-gray-700">
              Description
            </label>
            <div class="mt-1">
              <textarea id="description" name="description" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">{% if category %}{{ category.description }}{% endif %}</textarea>
            </div>
            <p class="mt-2 text-sm text-gray-500">Write a few sentences about this category.</p>
          </div>
        </div>
        {% if errors %}
          {% for error in errors %}
            <p class="mt-2 text-sm text-red-600">{{ error.msg }}</p>
          {% endfor %}
        {% endif %}
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end">
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Save
        </button>
      </div>
    </div>
  </form>
{% endblock %}